<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment"
    android:background="@color/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ffc736"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        app:layout_constraintHeight_percent=".15" >

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/ivFotoProfil"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_rounded_white"
        android:src="@drawable/googlelogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.105"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivFotoProfil">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tvNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Nama Lengkap"
                android:textColor="@color/textColorSecondary"
                android:visibility="visible"
                tools:ignore="MissingConstraints" />

            <ImageButton
                android:id="@+id/ibNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/ic_edit"
                app:layout_constraintEnd_toEndOf="@+id/nama" />

            <TextView
                android:id="@+id/tvNamaUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/textColorSecondary"
                android:text="@string/nama_user"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvNama"/>


            <EditText
                android:id="@+id/editTextNama"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_width="292dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_rounded_white"
                android:ems="10"
                android:fontFamily="@font/poppins_medium"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/textColorSecondary"
                android:textSize="14dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvNama"
                android:visibility="invisible"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/NoHp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/nama"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tvNoHp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Nomor Handphone"
                android:textColor="@color/textColorSecondary"
                tools:ignore="MissingConstraints" />

            <ImageButton
                android:id="@+id/ibNoHp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/ic_edit"
                app:layout_constraintEnd_toEndOf="@+id/NoHp" />

            <TextView
                android:id="@+id/tvNoHpUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/textColorSecondary"
                android:text="@string/noHp_user"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvNoHp"/>

            <EditText
                android:id="@+id/editTextNoHp"
                android:layout_width="292dp"
                android:layout_height="40dp"
                android:layout_below="@id/tvNoHp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_rounded_white"
                android:ems="10"
                android:inputType="phone"
                android:padding="10dp"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvNoHp"
                android:visibility="invisible"
                tools:ignore="MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/NoHp"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Email"
                android:textColor="@color/textColorSecondary"
                tools:ignore="MissingConstraints" />

            <ImageButton
                android:id="@+id/ibEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/ic_edit"
                app:layout_constraintEnd_toEndOf="@+id/email" />

            <TextView
                android:id="@+id/tvEmailUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/textColorSecondary"
                android:text="@string/email_user"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvEmail"/>

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="292dp"
                android:layout_height="40dp"
                android:layout_below="@id/tvEmail"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_rounded_white"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvEmail"
                android:visibility="invisible"
                tools:ignore="MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tempatLahir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/email"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tvTempatLahir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Tempat Lahir"
                android:textColor="@color/textColorSecondary"
                tools:ignore="MissingConstraints" />

            <ImageButton
                android:id="@+id/ibTempatLahir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/ic_edit"
                app:layout_constraintEnd_toEndOf="@+id/tempatLahir" />

            <TextView
                android:id="@+id/tvTempatLahirUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/textColorSecondary"
                android:text="@string/tempatLahir_user"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTempatLahir"/>

            <EditText
                android:id="@+id/editTextTempatLahir"
                android:layout_width="292dp"
                android:layout_height="40dp"
                android:layout_below="@id/tvTempatLahir"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_rounded_white"
                android:ems="10"
                android:inputType="text"
                android:padding="10dp"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTempatLahir"
                android:visibility="invisible"
                tools:ignore="MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tanggalLahir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tempatLahir"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tvTanggalLahir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Tanggal Lahir"
                android:textColor="@color/textColorSecondary"
                tools:ignore="MissingConstraints" />

            <ImageButton
                android:id="@+id/ibTanggalLahir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/ic_edit"
                app:layout_constraintEnd_toEndOf="@+id/tanggalLahir" />

            <TextView
                android:id="@+id/tvTanggalLahirUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/textColorSecondary"
                android:text="@string/tanggalLahir_user"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTanggalLahir"/>

            <EditText
                android:id="@+id/editTextTanggalLahir"
                android:layout_width="292dp"
                android:layout_height="40dp"
                android:layout_below="@id/tvTanggalLahir"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_rounded_white"
                android:clickable="true"
                android:ems="10"
                android:padding="10dp"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTanggalLahir"
                tools:ignore="MissingConstraints"
                android:visibility="invisible"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tanggalLahir"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tvAlamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Alamat"
                android:textColor="@color/textColorSecondary"
                tools:ignore="MissingConstraints" />

            <ImageButton
                android:id="@+id/ibAlamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/ic_edit"
                app:layout_constraintEnd_toEndOf="@+id/alamat" />

            <TextView
                android:id="@+id/tvAlamatUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/textColorSecondary"
                android:text="@string/alamat_user"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvAlamat"/>

            <EditText
                android:id="@+id/editTextAlamat"
                android:layout_width="292dp"
                android:layout_height="40dp"
                android:layout_below="@id/tvAlamat"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_rounded_white"
                android:clickable="true"
                android:ems="10"
                android:inputType="text"
                android:padding="10dp"
                android:textSize="14dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvAlamat"
                tools:ignore="MissingConstraints"
                android:visibility="invisible"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_rounded_white"
            android:fontFamily="@font/poppins_bold"
            android:text="Simpan"
            android:textAllCaps="false"
            android:textColor="@color/textPrimary"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/alamat"
            app:layout_constraintVertical_bias="1.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
