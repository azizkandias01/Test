<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    tools:context=".DatePickerFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="Lengkapi Data Diri"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

<ScrollView
    android:id="@+id/scrollView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tvNama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Nama Lengkap"
                android:textColor="@color/textColorSecondary"
                android:visibility="visible"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/editTextNama"
                style="@style/Widget.AppCompat.AutoCompleteTextView"
                android:layout_width="292dp"
                android:layout_height="40dp"
                android:layout_below="@id/tvNama"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_rounded_white"
                android:ems="10"
                android:fontFamily="@font/poppins_medium"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:textColor="@color/textColorSecondary" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/NoHp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/nama"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tvNoHp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Nomor Handphone"
                android:textColor="@color/textColorSecondary"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/editTextNoHp"
                android:layout_width="292dp"
                android:layout_height="40dp"
                android:layout_below="@id/tvNoHp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_rounded_white"
                android:ems="10"
                android:inputType="textPassword"
                android:padding="10dp"
                tools:ignore="MissingConstraints" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/NoHp"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Email"
                android:textColor="@color/textColorSecondary"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="292dp"
                android:layout_height="40dp"
                android:layout_below="@id/tvEmail"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_rounded_white"
                android:ems="10"
                android:inputType="textPassword"
                android:padding="10dp"
                tools:ignore="MissingConstraints" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tempatLahir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/email"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tvTempatLahir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Tempat Lahir"
                android:textColor="@color/textColorSecondary"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/editTextTempatLahir"
                android:layout_width="292dp"
                android:layout_height="40dp"
                android:layout_below="@id/tvTempatLahir"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_rounded_white"
                android:ems="10"
                android:inputType="textPassword"
                android:padding="10dp"
                tools:ignore="MissingConstraints" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tanggalLahir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tempatLahir"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tvTanggalLahir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Tanggal Lahir"
                android:textColor="@color/textColorSecondary"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/editTextTanggalLahir"
                android:layout_width="292dp"
                android:layout_height="40dp"
                android:layout_below="@id/tvTanggalLahir"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_rounded_white"
                android:clickable="true"
                android:ems="10"
                android:inputType="textPassword"
                android:padding="10dp"
                tools:ignore="MissingConstraints" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tanggalLahir"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/tvAlamat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Alamat"
                android:textColor="@color/textColorSecondary"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/editTextAlamat"
                android:layout_width="292dp"
                android:layout_height="40dp"
                android:layout_below="@id/tvAlamat"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape_rounded_white"
                android:clickable="true"
                android:ems="10"
                android:inputType="textPassword"
                android:padding="10dp"
                tools:ignore="MissingConstraints" />
        </RelativeLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="292dp"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/shape_rounded_white"
            android:fontFamily="@font/poppins_bold"
            android:text="Simpan"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@id/alamat"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
