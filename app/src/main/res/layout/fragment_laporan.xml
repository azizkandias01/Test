<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    tools:context=".DatePickerFragment"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_weight="1">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/yellow_header_shape"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent=".16"
        tools:ignore="MissingConstraints"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="Laporkan Titik Banjir"
        android:textColor="@color/textPrimary"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/header"
                android:layout_marginBottom="20dp">

<!--                <RelativeLayout-->
<!--                    android:id="@+id/tipePengaduan"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    tools:ignore="MissingConstraints">-->

<!--                    <androidx.appcompat.widget.AppCompatSpinner-->
<!--                        android:id="@+id/spinnerTipePengaduan"-->
<!--                        android:layout_width="308dp"-->
<!--                        android:layout_height="50dp"-->
<!--                        android:background="@drawable/spinner_bg"-->
<!--                        app:spinnerMode="dialog"-->
<!--                        android:outlineAmbientShadowColor="@color/primaryVariant"/>-->

<!--                </RelativeLayout>-->

                <RelativeLayout
                    android:id="@+id/namaJalan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    tools:ignore="MissingConstraints">

                    <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:borderColor="@color/primaryVariant"
                        app:borderWidth="2dp"
                        app:cornerRadius="8dp"
                        android:padding="16dp">

                        <EditText
                            android:id="@+id/editTextNamaJalan"
                            android:layout_width="292dp"
                            android:layout_height="40dp"
                            android:hint="Nama Jalan"
                            android:layout_marginTop="5dp"
                            android:padding="10dp"
                            android:textColor="@color/textColorSecondary"
                            android:textColorHint="@color/textColorSecondary"
                            android:textSize="16dp" />

                    </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/lokasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/namaJalan"
                    tools:ignore="MissingConstraints">

                    <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:borderColor="@color/primaryVariant"
                        app:borderWidth="2dp"
                        app:cornerRadius="8dp"
                        android:padding="16dp">

                        <EditText
                            android:id="@+id/editTextLokasi"
                            android:layout_width="292dp"
                            android:layout_height="40dp"
                            android:hint="Lokasi"
                            android:layout_marginTop="5dp"
                            android:padding="10dp"
                            android:textColor="@color/textColorSecondary"
                            android:textColorHint="@color/textColorSecondary"
                            android:textSize="16dp" />

                    </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/deskripsi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/lokasi"
                    tools:ignore="MissingConstraints">

                    <ss.anoop.awesometextinputlayout.AwesomeTextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:borderColor="@color/primaryVariant"
                        app:borderWidth="2dp"
                        app:cornerRadius="8dp"
                        android:padding="16dp">

                        <EditText
                            android:id="@+id/editTextDeskripsi"
                            android:layout_width="292dp"
                            android:layout_height="wrap_content"
                            android:hint="Deskripsi"
                            android:layout_marginTop="5dp"
                            android:padding="10dp"
                            android:textColor="@color/textColorSecondary"
                            android:textColorHint="@color/textColorSecondary"
                            android:textSize="16dp"
                            android:scrollbarAlwaysDrawVerticalTrack="true"
                            android:scrollbars="vertical"/>

                    </ss.anoop.awesometextinputlayout.AwesomeTextInputLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/foto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintTop_toBottomOf="@id/deskripsi"
                    tools:ignore="MissingConstraints">

                    <TextView
                        android:id="@+id/tvFoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Foto Lokasi"
                        android:textColor="@color/textColorSecondary"
                        tools:ignore="MissingConstraints" />

                    <EditText
                        android:id="@+id/editLokasi"
                        android:layout_width="292dp"
                        android:layout_height="40dp"
                        android:layout_below="@id/tvFoto"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/shape_rounded_white"
                        android:ems="10"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textSize="16dp"
                        tools:ignore="MissingConstraints" />
                </RelativeLayout>

                <Button
                    android:id="@+id/button"
                    android:layout_width="292dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/shape_rounded_white"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Lapor"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    app:layout_constraintTop_toBottomOf="@id/foto"
                    tools:ignore="MissingConstraints" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>
